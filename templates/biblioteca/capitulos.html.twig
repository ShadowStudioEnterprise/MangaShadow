{% extends 'base.html.twig' %}

{% block title %}Biblioteca{% endblock %}

{% block body %}
<div class="capituloMenu">
   
        <a  class="first" href="{{ path('manga_biblioteca', { titulo: capitulo.mangaId.id}) }}"><i class="fa fa-angle-up icons"></i></a>
        <h5>{{capitulo.mangaId.titulo}}</h5>
        <h5>Capitulo : {{ capitulo.numero }}</h5>
        <ul class="menuC last">
            <li><a id="vista" href="#">Modo de lectura</a>
            <ul>
                <li><a id="cascada" href="#">Vista Cascada</a></li>
                <li><a id="paginada" href="#">Vista Paginada</a></li>
            </ul>
        </ul>
    
</div>
<div class="imagenesC slider">
{% for imagen in imagenes %}
<div>
    <img src="{{imagen}}" class="imagenCapitulo">
</div>
{% endfor %}
</div>
<script src="/JS/slick-master/slick/slick.js"></script>
<script src="/JS/capitulos.js"></script>
{% endblock %}
